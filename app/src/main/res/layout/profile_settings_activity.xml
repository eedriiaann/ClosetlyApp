<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.SettingsActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/bGoSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="bSettingsGoBack"
            android:src="@drawable/ic_arrow_backwards"
            app:tint="?attr/colorOnBackground"/>

        <TextView
            android:id="@+id/tvSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/title_settings"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/bMeGustas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:onClick="bSettingsGoFavs"
        android:text="@string/title_likes"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnBackground"
        app:icon="@drawable/ic_heart"
        app:iconTint="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/bEditProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:onClick="bSettingsGoEditProfile"
        android:text="@string/title_edit_profile"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnBackground"
        app:icon="@drawable/ic_person"
        app:iconTint="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/bMeGustas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/bAyuda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:onClick="bSettingsGoHelp"
        android:text="@string/title_help"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnBackground"
        app:icon="@android:drawable/ic_menu_help"
        app:iconTint="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/bEditProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/bConfiguracion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/title_configuration"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnBackground"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconTint="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/bAyuda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/bLogOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/title_logout"
        android:textAlignment="textStart"
        android:textColor="#FF4444"
        android:onClick="bLogOut"
        app:icon="@drawable/ic_logout"
        app:iconTint="#FF4444"
        app:layout_constraintTop_toBottomOf="@id/bConfiguracion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
