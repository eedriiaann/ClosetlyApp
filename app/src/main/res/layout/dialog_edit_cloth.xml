<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/hint_name"
            android:textColor="?attr/colorOnSurface" />

        <EditText
            android:id="@+id/etEditDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="top"
            android:hint="@string/hint_description"
            android:inputType="textMultiLine"
            android:lines="3"
            android:textColor="?attr/colorOnSurface" />

        <AutoCompleteTextView
            android:id="@+id/actvEditCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/hint_category"
            android:inputType="none"
            android:textColor="?attr/colorOnSurface" />

        <EditText
            android:id="@+id/etEditBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/hint_brand"
            android:textColor="?attr/colorOnSurface" />

        <EditText
            android:id="@+id/etEditPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/hint_price"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:textColor="?attr/colorOnSurface" />

        <AutoCompleteTextView
            android:id="@+id/actvEditSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/hint_size"
            android:inputType="none"
            android:textColor="?attr/colorOnSurface" />

        <AutoCompleteTextView
            android:id="@+id/actvEditSeason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/hint_season"
            android:inputType="none"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/tags_title"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupEditTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:singleLine="false"
            app:chipSpacingHorizontal="4dp"
            app:chipSpacingVertical="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <EditText
                android:id="@+id/etEditNewTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:hint="@string/cloth_tags_hint"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurface" />

            <Button
                android:id="@+id/btnEditAddTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_tag_button" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
